# Object added to list:
# - grro: GRridge object

# Annotation partitions
mirTable <- unique(PCBL$mirLookup[, c("miRNA_ID", "chromosome", "region")])
mirIndex <- match(PCBL$mirs, mirTable$miRNA_ID)
mirChromo <- split(1:length(PCBL$mirs), PCBL$mirLookup$chromosome[mirIndex])
mirChromo <- mirChromo[lapply(mirChromo, length) > 20]

# Distributional partitions
mirNorm <- sweep(PCBL$mirRaw, 2, PCBL$mirNF, "/")
means <- rowMeans(mirNorm)
sds <- apply(mirNorm, 1, sd)
mirCounts <- CreatePartition(means, ngroup=6)
mirSDs <- CreatePartition(sds, ngroup=6)

# Create partitions list
parts <- list(mirCounts=mirCounts, 
              mirSDs=mirSDs,
              mirRegion=mirRegion)

# Optimize model with partitions
grro <- grridge(highdimdata=PCBL$mirDat, 
                response=as.factor(!PCBL$ctrlIndex), 
                partitions=parts, 
                monotone=c(TRUE, TRUE, FALSE, FALSE),
                innfold=5,
                trace=TRUE)

# Add values to list and remove old objects
PCBL$grro=grro
rm(mirTable, mirIndex, mirChromo, mirNorm, means, sds, mirCounts, mirSDs, parts)
